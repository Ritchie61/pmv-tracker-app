{
  "name": "Flutter & Supabase Cloud Dev",
  "build": { "dockerfile": "Dockerfile" },
  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.flutter",
        "Dart-Code.dart-code",
        "supabase.supabase-vscode",
        "eamodio.gitlens"
      ],
      "settings": {
        "dart.flutterSdkPath": "/usr/local/flutter",
        "terminal.integrated.shell.linux": "/bin/bash"
      }
    }
  },
  "forwardPorts": [3000, 5353, 8080],
  "portsAttributes": {
    "3000": { "label": "Flutter Web Preview" },
    "5353": { "label": "Flutter Debug" }
  },
  "postCreateCommand": "flutter pub get && flutter doctor -v",
  "remoteUser": "vscode"
}
